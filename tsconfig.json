{
  "exclude": [
	"bazel-out",
	"dist"
  ],
  "compilerOptions": {
	"target": "es2020",
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ],
	"module": "esnext",
	"lib": ["dom", "dom.iterable", "esnext", "scripthost"],
	"declaration": true,
	"sourceMap": true,
	"strict": true,
	"noImplicitAny": true,
	"strictNullChecks": true,
	"strictFunctionTypes": true,
	"noImplicitThis": true,
	"alwaysStrict": true,
	"noUnusedParameters": false,
	"noImplicitReturns": true,
	"noFallthroughCasesInSwitch": true,
	"incremental": true,
  }
}
